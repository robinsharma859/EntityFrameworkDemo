@using BussinessLayer.Models;
@{
    var data = ViewBag.Records;
}
<html>
<body class="col-lg-1">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <table border="1" class="table-condensed table-bordered">

                <tbody>
                    <tr>
                        <td>Serial No</td>
                        <td>User ID</td>
                        <td>ImageName</td>
                        <td>Link</td>
                    </tr>
                    @*@foreach (var item in data)
                        {
                            <tr>
                                <td>1</td>
                                <td>@item.Key</td>
                                <td>item.Value</td>
                            </tr>
                        }*@

                    @foreach (UploadPicture item in data)
                    {
                        <tr>
                            <td>@item.ImageId</td>
                            <td>@item.UserId</td>
                            <td>@item.ImageName</td>
                            <td>@Html.ActionLink("Download", "DownloadImage", "Profile", new { ImageName = @item.ImageName }, null)</td>

                        </tr>
                    }

                </tbody>

            </table>
        </div>
    }
    <script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
    theme: "light1", // "light1", "light2", "dark1", "dark2"
    exportEnabled: false,
	animationEnabled: true,
	title: {
		text: "Product Inventary Summary Details",
		fontSize: 22
	},
	data: [{
		type: "pie",
		startAngle: 160,
		toolTipContent: "<b>{label}</b>: {y}%",
		indexLabel: "{label} - {y}%",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();

}
    </script>
    <div>
        <div id="chartContainer" style="height: 370px; width: 100%;"></div>
        <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    </div>
</body>
</html>
